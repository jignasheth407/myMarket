<% include templates/header.ejs %>
<% include templates/sidebar.ejs %>

<div class="container-fluid">
    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="/dashboard">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Vender</li>
    </ol>
    <div class="card mb-3">
        <div class="card-header">
            <div class="row">
              <div class="col-md-10">
                <i class="fas fa-table"></i> Vender
              </div>
              <div class="col-md-2">
                <a href="/add_vender" class="btn btn-info btn-block" title="Vender">Add Vender</a>
              </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th> Logo </th>
                            <th> Shop name </th>
                            <th> Name</th>
                            <th> Email</th>
                            <th> Phone</th>
                            <th> Password</th>
                            <th width="10%">Details</th>
                            <th> Action </th>
                        </tr>
                      </thead>
                      <tfoot>
                        <tr>
                            <th> Logo </th>
                            <th> Shop name </th>
                            <th> Name</th>
                            <th> Email</th>
                            <th> Phone</th>
                            <th> Password</th>
                            <th width="10%">Details</th>
                            <th> Action </th>
                        </tr>
                      </tfoot>
                      <tbody>
                        <%
                          if(venderData != '')
                          {
                            for(var i=0; i < venderData.length; i++) {
                              %>
                           
                                <tr>
                                    <td> <img src="<%= venderData[i].icons_image %>" width="100px" height="50"></td>
                                    <td> <%= venderData[i].store_name %> </td>
                                    <td> <%= venderData[i].vender_name %> </td>
                                    <td> <%= venderData[i].email %> </td>
                                    <td> <%= venderData[i].phone %> </td>
                                    <td> <%= venderData[i].password %> </td>
                                    <td> <a href="/venderDetails/<%= venderData[i]._id %>">Details</a> </td>
                                    <td>
                                    <a href="/updateVendor/<%= venderData[i]._id %>"> <i class="fas fa-edit text-info"></i> </a>
                                    &nbsp;														
                                    <i class="fas fa-trash text-danger" onClick="removeDetails('removeVender','<%= venderData[i]._id %>')" style="cursor:pointer"></i>
                                  </td>
                                </tr>
                              <%	
                            }
                          }
                        %>
                      </tbody>
                </table>
            </div>
        </div>
    </div>    
</div>    
<% include templates/footer.ejs %>