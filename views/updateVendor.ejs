<!-- Header -->
<% include templates/header.ejs %>
<% include templates/sidebar.ejs %>

<div class="container-fluid">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <i class="fa fa-home"></i>
            <a href="/dashboard">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Update Vendor Information</li>
    </ol>
    <div class="row">
        <div class="col-md-12 column">
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">Update Vendor Details </h3> 
                </div>
                <form action="/updateVendor/<%= update_vendor._id %>" method="post" enctype="multipart/form-data">
                    <div class="box-body">
                        <div class="row">
                            <div class="form-group col-md-3">
                                <label>Store Name<span class="text-danger">*</span></label>
                                <input type="text" name="store_name" value="<%= update_vendor.store_name %>" required id="store_name" readonly class="form-control">
                            </div>
                            <%
                                if(update_vendor.icons_image)
                                {
                                    %>											
                                        <div class="form-group col-md-2">
                                            <label>Selected</label><br/>
                                            <td> <img src="<%= update_vendor.icons_image %>" width="150px" height="50"></td>
                                        </div>
                                    <%
                                }
                            %>
                            <div class="form-group col-md-3">
                                <label>choose logo</label><br/>
                                <input type="file" name="image" id="image">
                            </div>

                            <div class="form-group col-md-3">
                                <label>Email<span class="text-danger">*</span></label>
                                <input type="text" name="email" value="<%= update_vendor.email %>" required id="email" required class="form-control">
                            </div>
                            <div class="form-group col-md-3">
                                <label>Phone<span class="text-danger">*</span></label>
                                <input type="text" name="phone" value="<%= update_vendor.phone %>" required id="phone" required class="form-control">
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-5">
                                <div class="input text">
                                    <button class="btn btn-success btn-sm" type="submit" ><i class="fas fa-fw fa-save"></i> Update</button>
                                    <a href="/vender" class="btn btn-warning btn-sm"><i class="fas fa-fw fa-ban"></i> Cancel</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Footer -->
<% include templates/footer.ejs %> 
