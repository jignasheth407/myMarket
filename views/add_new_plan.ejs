<!-- Header-->
<% include templates/header.ejs %>
<% include templates/sidebar.ejs %>

<div class="container-fluid">
    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
          <a href="/dashboard">Dashboard</a>
        </li>
        <li class="breadcrumb-item active"> Subscription Info </li>
    </ol>
    <div class="row">
        <div class="col-md-12 column">
            <div class="box box-primary">
                <div class="box-header">
                    <h3 class="box-title">Add Plans Details</h3>
                </div>
                <br><br>
                <form action="/add_new_plan" method="post">
                    <div class="box-body">
                        <div class="row">
                            <div class="form-group col-md-4">
                                <label>Select Plan Name<span class="text-danger">*</span></label>
                                <select name="plan_name" class="form-control">
                                    <option value=""> -- Select Plan -- </option>
                                    <option value="Silver">Silver</option>
                                    <option value="Gold">Gold</option>
                                    <option value="Platinum">Platinum</option>
                                </select>
                            </div>
                            <!-- <div class="form-group col-md-4">
                                <label>Plan_Name<span class="text-danger">*</span></label>
                                <input type="text" name="pname" id="pname" required class="form-control">
                            </div> -->
                            <div class="form-group col-md-4">
                                <label>Select Plan Validity<span class="text-danger">*</span></label>
                                <select name="validity" class="form-control">
                                    <option value=""> -- Select validity -- </option>
                                    <option value="10">10 Days</option>
                                    <option value="20">20 Days</option>
                                    <option value="30">30 Days</option>
                                </select>
                            </div>
                              <div class="form-group col-md-4">
                                <label>Plan_Price<span class="text-danger">*</span></label>
                                <input type="text" name="price" id="price" required class="form-control">
                              </div>
                        </div>
                        <br><br><br>
                        <div class="row">
                            <div class="form-group col-md-5">
                                <div class="input text">
                                    <button class="btn btn-success btn-sm" type="submit" ><i class="fas fa-fw fa-save"></i> Save Plan</button>
                                    <a href="/subscription" class="btn btn-warning btn-sm"><i class="fas fa-fw fa-ban"></i> Cancel</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>

<!-- Footer -->
<% include templates/footer.ejs %>  