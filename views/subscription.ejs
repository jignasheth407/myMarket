<!-- Header-->
<% include templates/header.ejs %>
<% include templates/sidebar.ejs %>

<div class="container-fluid">
    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
          <a href="/">Dashboard</a>
        </li>
        <li class="breadcrumb-item active">Subscription</li>
    </ol>
    <div class="card mb-3">
        <div class="card-header">
            <div class="row">
                <div class="col-md-10">
                    <i class="fas fa-table"></i> Plan & Pricing
                  </div>
                  <div class="col-md-2">
                    <a href="/add_new_plan" class="btn btn-info btn-block" title="Plan">Add New Plan</a>
                  </div>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                      <th> Name </th>
                      <th> Validity</th>
                      <th> Price</th>
                      <th> Status </th>
                      <th> Action </th>
                    </tr>
                </thead>
                <tfoot>
                <tr>
                    <th> Name </th>
                    <th> Validity</th>
                    <th> Price</th>
                    <th> Status </th>
                    <th> Action </th>
                </tr>
                </tfoot>
                <tbody>
                <%
                    if(plan_list != '')
                    {
                        for(var i=0; i < plan_list.length; i++)
                        {
                            %>
                                <tr>
                                <td><%= plan_list[i].plan_name %></td>	
                                <td><%= plan_list[i].plan_Validity%> Days</td>	
                                <td><%= plan_list[i].plan_price %></td>
                                <td>
                                    <%
                                    if(plan_list[i].status == true)
                                    {
                                        %>
                                        Active
                                        <%
                                    }
                                    else
                                    {
                                        %>
                                        Inactive
                                        <%
                                    }
                                    %>
                                </td>
                                <td>
                                    <a href="/editplan/<%= plan_list[i]._id %>">
                                    <i class="fas fa-edit text-info"></i>
                                    </a>
                                    &nbsp;														
                                    <i class="fas fa-trash text-danger" onClick="removeDetails('removeplan','<%= plan_list[i]._id %>')" style="cursor:pointer"></i>
                                </td>
                                </tr>
                            <%
                        }
                    }
                %>
            </tbody>
        </table>
    </div>
  </div>
</div>
<!-- Footer -->
<% include templates/footer.ejs %>   